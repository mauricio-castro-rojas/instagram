<p><%=account.id %></p>
<p><%=current_account.id %></p>
<p>Seguidores de<%=account.followers.count %></p>
<p>Seguidos<%=account.followings.count %></p>

<div id="<%= dom_id account %>">
  <% if account.avatar.attached? %>
    <%= image_tag account.avatar.variant(:thumb) %>
  <% else %>
    <%= "/default_profile.jpg" %>
  <% end %>
  <div class="flex">
    <p class="text-3xl text-slate-700 mr-2 p-2">
      <%= account.name %>
    </p>
    <button class="<%=account.show_follow_button(account, current_account)%> mx-3 p-3 bg-sky-400 text-sm font-bold
      text-white rounded-md" data-reflex="click->Account#follow" data-params="<%=account.id%>" data-current="<%=current_account.id%>">Seguir</button>
  </div>


  <p class="text-xl text-slate-500">
    Account user name:
    <%= account.user_name %>
  </p>
  <div class="mx-3 p-4 bg-blue-100">
    <h2 class="text-3xl bg-blue-200 p-2">Posts</h2>
    <% for post in account.posts %>
      <ul class="ml-5 p-4">
        <li>
          <% if post.post_image.attached? %>
            <%= link_to account_post_path(account, post) do %>
              <%= image_tag post.post_image.variant(:thumb) %>
            <% end %>
          <% else %>
            <%= "/default_profile.jpg" %>
          <% end %>
        </li>
        <li><%= post.text %></li>
      </ul>
    <% end %>
  </div>


</div>
