
<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
  <tr>
    <th>Body</th>
    <th>Account</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <%= render post %>
      <td><%= post.text %></td>
      <td><%= post.account.name %></td>

      <td>
        <% if post.post_image.attached? %>
          <%= image_tag post.post_image.variant(:thumb) %>
        <% else %>
          <%= "/default_profile.jpg" %>
        <% end %>
      </td>
      <td><%= link_to 'Show Account', [@account] %></td>
      <td><%= link_to 'Edit Post', edit_account_post_path(@account, post) %></td>
      <td><%= link_to 'Destroy Post', [@account, post], data: {turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_account_post_path(@account) %>